<Window x:Class="TestTaskParserWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestTaskParserWPF"
        mc:Ignorable="d"
        Title="TTParser" Height="521.333" Width="500">
    <Grid>
        <Button Content="Start" HorizontalAlignment="Left" Margin="10,55,0,0" VerticalAlignment="Top" Width="472" Click="Button_Click"/>
        <RichTextBox Name="Log" HorizontalAlignment="Left" Height="400" Margin="10,80,0,0" VerticalAlignment="Top" Width="472">
            <FlowDocument>
                <Paragraph>
                    <Run Text="Waiting..."/>
                </Paragraph>
            </FlowDocument>
        </RichTextBox>
        <CheckBox Content="DB connection" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <CheckBox Content="Site availability" HorizontalAlignment="Left" Margin="384,10,0,0" VerticalAlignment="Top"/>
        <TextBox Name="Link" HorizontalAlignment="Left" Height="20" Margin="10,30,0,0" TextWrapping="Wrap" Text="https://www.ilcats.ru/" VerticalAlignment="Top" TextAlignment="Center" Width="472" IsEnabled="False"/>

    </Grid>
</Window>
